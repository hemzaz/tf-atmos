    echo "ðŸ˜Š Developer Satisfaction Metrics"
    echo "---------------------------------"
    
    # Net Promoter Score
    local nps_score="$(calculate_nps)"
    local nps_trend="$(get_nps_trend)"
    
    echo "ðŸ“ˆ Platform NPS Score: $nps_score $nps_trend"
    
    # Satisfaction by Category
    echo "ðŸ“Š Satisfaction Breakdown:"
    echo "   â€¢ Documentation:     $(get_satisfaction_score "documentation")/5.0 â­"
    echo "   â€¢ Tooling:          $(get_satisfaction_score "tooling")/5.0 â­"
    echo "   â€¢ Self-Service:     $(get_satisfaction_score "self-service")/5.0 â­"
    echo "   â€¢ Support:          $(get_satisfaction_score "support")/5.0 â­"
    echo "   â€¢ Performance:      $(get_satisfaction_score "performance")/5.0 â­"
    
    # Recent Feedback
