    echo "   â€¢ Total Services:   $(count_services_created 30)"
    echo "   â€¢ Via Templates:    $(count_template_usage 30) ($(calculate_template_percentage 30)%)"
    echo "   â€¢ Manual Creation:  $(count_manual_creation 30)"
    
