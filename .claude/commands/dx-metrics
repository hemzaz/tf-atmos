    echo "----------------------------"
    
    # Active Users
    local active_users="$(count_active_users)"
    local total_users="$(count_total_users)"
    local adoption_rate=$((active_users * 100 / total_users))
    
    echo "ðŸ‘¥ Active Users: $active_users/$total_users ($adoption_rate%)"
    
    # Feature Adoption
    echo "ðŸ”§ Feature Adoption:"
    echo "   â€¢ Self-Service Portal:  $(get_feature_adoption "portal")%"
    echo "   â€¢ Template Usage:       $(get_feature_adoption "templates")%"
    echo "   â€¢ Cost Monitoring:      $(get_feature_adoption "cost")%"
