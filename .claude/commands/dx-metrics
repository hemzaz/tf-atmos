    echo "â° Productivity Impact:"
    echo "   â€¢ Time Saved:         $time_saved hours/developer/month"
    echo "   â€¢ Productivity Gain:  $productivity_gain%"
    echo "   â€¢ Equivalent FTEs:    $(calculate_equivalent_ftes)"
    
