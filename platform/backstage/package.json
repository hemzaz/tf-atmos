{
  "name": "platform-backstage",
  "version": "1.0.0",
  "description": "Internal Developer Platform - Backstage Application",
  "private": true,
  "engines": {
    "node": "18 || 20"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "start": "yarn workspace app start",
    "start-backend": "yarn workspace backend start",
    "build": "backstage-cli repo build --all",
    "build-image": "yarn build && yarn build-image-backend",
    "build-image-backend": "yarn workspace backend build-image",
    "tsc": "tsc",
    "tsc:full": "backstage-cli repo clean && tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage --watchAll=false --passWithNoTests",
    "test:e2e": "playwright test",
    "fix": "backstage-cli repo fix",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "lint:type-deps": "backstage-cli repo lint --type-deps",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "new": "backstage-cli new --scope internal",
    "postinstall": "husky install",
    "prepare": "husky install"
  },
  "dependencies": {
    "@backstage/cli": "^0.25.0",
    "concurrently": "^8.2.0"
  },
  "devDependencies": {
    "@backstage/e2e-test-utils": "^0.1.1",
    "@backstage/repo-tools": "^0.4.0",
    "@playwright/test": "^1.32.3",
    "@types/node": "^18.17.8",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.8",
    "typescript": "~5.1.0"
  },
  "resolutions": {
    "@types/react": "^17",
    "@types/react-dom": "^17"
  },
  "prettier": "@backstage/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "backstage": {
    "role": "root"
  }
}